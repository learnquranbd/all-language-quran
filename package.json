{
  "name": "all-language-quran",
  "version": "1.0.0",
  "description": "Multi-language Quran Reader with Tafseer, Word by Word, Grammar, Audio and Video lectures",
  "main": "index.html",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./css/tailwind.min.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./css/tailwind.min.css --watch",
    "dev": "npx live-server --port=3000",
    "build": "npm run build:css"
  },
  "keywords": [
    "quran",
    "islamic",
    "tafseer",
    "arabic",
    "multi-language",
    "education"
  ],
  "author": "LearnQuranBD",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/learnquranbd/all-language-quran.git"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "live-server": "^1.2.2"
  }
}
